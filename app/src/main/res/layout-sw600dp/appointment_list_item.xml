<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appointmentAppointmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/appointmentAppointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointmentAppointmentDate"
            android:padding="8dp"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/appointmentAppointmentDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointmentAppointmentTime"
            android:padding="8dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/appointmentCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointmentAppointmentDesc"
            android:onClick="deleteAppointment"
            android:padding="8dp"
            android:tag=""
            android:text="@string/cancel"
            android:textSize="24sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>